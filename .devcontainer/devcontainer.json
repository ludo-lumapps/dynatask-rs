{
	"name": "dynatask-rs",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer@prerelease",
				"vadimcn.vscode-lldb"
			],
			"settings": {
				"files.watcherExclude": {
					"**/target/**": true,
					"**/.cargo/**": true,
					"**/.rustup/**": true,
					"/logs/**": true,
					"/tmp": true
				}
			}
		}
	},
	"postCreateCommand": "bash .devcontainer/post_install.sh",
	"postStartCommand": "sudo service valkey-server start"
}